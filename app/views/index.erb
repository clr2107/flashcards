<h1 id="flashcards">Welcome to Flashcards!</h1>
<img src="http://www.alphabet-action.citymax.com/i/_Flash_Card_Q.jpg" alt="flashcards">
<% if current_user %>
    <h2>Choose a Category:</h2>
        <%@decks.each do |deck| %>
          <ul>
            <li><a href="/decks/<%=deck.id%>"><%=deck.name%></a></li>
          </ul>
          <%end%>
        <% else %>
         <h3>Featured Topics:</h3>
      <ul class="deck-options">
        <li>Music</li>
        <li>Computer Science</li>
        <li>Basic Math</li>
      </ul>
<% end %>


